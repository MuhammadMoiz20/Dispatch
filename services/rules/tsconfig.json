{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"],
    "paths": {
      "@dispatch/config": ["packages/config/src"],
      "@dispatch/logger": ["packages/logger/src"],
      "@dispatch/messaging": ["packages/messaging/src"],
      "@dispatch/idempotency": ["packages/idempotency/src"],
      "@dispatch/webhooks-core": ["packages/webhooks-core/src"],
      "@dispatch/workflows": ["packages/workflows/src"],
      "@dispatch/telemetry": ["packages/telemetry/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
