generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Order {
  id         String   @id @default(uuid())
  tenantId   String
  channel    String
  externalId String
  status     String   @default("created")
  createdAt  DateTime @default(now())
  items      OrderItem[]
  returns    Return[]

  @@index([tenantId])
  @@unique([tenantId, channel, externalId])
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  sku       String
  quantity  Int

  order Order @relation(fields: [orderId], references: [id])
}

model Return {
  id        String   @id @default(uuid())
  orderId   String
  tenantId  String
  reason    String
  state     String   @default("initiated")
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id])
  @@index([tenantId])
}

