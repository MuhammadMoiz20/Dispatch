{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@dispatch/config": ["packages/config/dist"],
      "@dispatch/logger": ["packages/logger/dist"],
      "@dispatch/messaging": ["packages/messaging/dist"],
      "@dispatch/idempotency": ["packages/idempotency/dist"],
      "@dispatch/webhooks-core": ["packages/webhooks-core/dist"],
      "@dispatch/workflows": ["packages/workflows/dist"]
    },
    "outDir": "dist"
  }
}
